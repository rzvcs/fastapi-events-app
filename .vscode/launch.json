{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
        },
        {
            "name": "Python: Test",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "purpose": [
                "debug-test",
                "debug-in-terminal"
            ]
        },
        {
            "name": "app",
            "type": "debugpy",
            "request": "launch",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}/myapp/executable",
            "args": [
                "run"
            ],
            "program": "${workspaceFolder}/myapp/executable/main.py"
        }
    ]
}
